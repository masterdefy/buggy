<%= javascript_tag do %>

  <% if Rails.env.development? %>
    I18n.translations = <%= I18n.backend.send(:translations).to_json.html_safe %>
  <% end %>

  <% if current_user %>
    var current_user = {
      id: <%= current_user.id %>,
      loggedIn: true,
      email: "<%= current_user.email %>"
    };
  <% else %>
    var current_user = { loggedIn: false };
  <% end %>
  Buggy.initialize({ current_user: current_user });
<% end %>
